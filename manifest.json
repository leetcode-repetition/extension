{
  "manifest_version": 3,
  "name": "LeetCode Repetition",
  "description": "",
  "version": "0.0.1",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "background": {
    "scripts": ["./src/background.js"],
    "type": "module"
  },
  "content_scripts": [
      {
        "matches": ["https://leetcode.com/*"],
        "js": ["./src/content.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://leetcode.com/problems/*"],
        "js": ["./src/popup.js"],
        "run_at": "document_start"
      }
  ],
  "action": {
      "default_popup": "./src/static/extension.html",
      "default_icon": {
          "16": "./src/static/leetcode-repetition-logo.png",
          "48": "./src/static/leetcode-repetition-logo.png",
          "128": "./src/static/leetcode-repetition-logo.png"
      }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "leetcode-repetition@extension.dev"
    }
  }
}
